<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" strict="true" name="Log4j2Config">
<Properties>
    <Property name="log_pattern">%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Property>
    <Property name="console_pattern">%d{HH:mm:ss.SSS} %-5level - %msg%n</Property>
    <Property name="app_log_root">logs</Property>
    <Property name="repaso_log">repaso_${hostName}</Property>
</Properties>
<Appenders>
    <!-- Appender para archivo -->
    <RollingFile name="FileLogger" fileName="${app_log_root}/${repaso_log}.log"
                 filePattern="${app_log_root}/${repaso_log}-%d{yyyy-MM-dd}-%i.log.gz">
        <PatternLayout pattern="${log_pattern}"/>
        <Policies>
            <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            <SizeBasedTriggeringPolicy size="100MB"/>
        </Policies>
    </RollingFile>

    <!-- Appender para consola -->
    <Console name="Console" target="SYSTEM_OUT">
        <PatternLayout pattern="${console_pattern}"/>
    </Console>
</Appenders>
<Loggers>
    <Root level="info">
        <AppenderRef ref="FileLogger"/>
        <AppenderRef ref="Console"/>
    </Root>
    <Logger name="org.test7" level="debug" additivity="false">
        <AppenderRef ref="FileLogger"/>
        <AppenderRef ref="Console"/>
    </Logger>
</Loggers>
</Configuration>
